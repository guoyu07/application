{
  "name": "spiral/application",
  "description": "Spiral Application",
  "license": "MIT",
  "authors": [
    {
      "name": "Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "spiral/framework": "^0.8.8",
    "spiral/profiler": "^0.8.0",
    "spiral/toolkit": "^0.8.0",
    "fzaninotto/faker": "~1.5",
    "funct/funct": "^1.1",
    "spiral/scaffolder": "^0.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.sample', '.env');\"",
      "php webroot/index.php app:key"
    ],
    "post-install-cmd": [
      "php webroot/index.php configure -vv"
    ]
  },
  "autoload": {
    "psr-4": {
      "": "app/classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": [
        "tests/",
        "tests/cases/"
      ]
    }
  }
}
